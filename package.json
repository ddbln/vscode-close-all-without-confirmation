{
  "name": "close-all-without-confirmation",
  "displayName": "Close All without Confirmation",
  "description": "Instantly close all editors (unsaved and saved) without repetitive confirmation dialogs!",
  "version": "1.0.0",
  "publisher": "ddbln",
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "close",
    "close all",
    "no confirmation",
    "discard",
    "revert",
    "tabs",
    "unsaved",
    "editor",
    "productivity",
    "workflow",
    "force close",
    "dirty files"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ddbln/vscode-close-all-without-confirmation"
  },
  "homepage": "https://github.com/ddbln/vscode-close-all-without-confirmation#readme",
  "bugs": {
    "url": "https://github.com/ddbln/vscode-close-all-without-confirmation/issues"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/i/ddbln.close-all-without-confirmation",
      "href": "https://marketplace.visualstudio.com/items?itemName=ddbln.close-all-without-confirmation",
      "description": "Install count"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/r/ddbln.close-all-without-confirmation",
      "href": "https://marketplace.visualstudio.com/items?itemName=ddbln.close-all-without-confirmation",
      "description": "Rating"
    },
    {
      "url": "https://img.shields.io/github/license/ddbln/vscode-close-all-without-confirmation",
      "href": "https://github.com/ddbln/vscode-close-all-without-confirmation/blob/main/LICENSE",
      "description": "License"
    }
  ],
  "markdown": "github",
  "qna": false,
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "closeAllNoConfirm.closeAll",
        "title": "Close All without Confirmation"
      },
      {
        "command": "closeAllNoConfirm.closeAllInGroup",
        "title": "Close All in Group without Confirmation"
      }
    ],
    "configuration": {
      "title": "Close All without Confirmation",
      "properties": {
        "closeAllNoConfirm.askBeforeClosing": {
          "type": "boolean",
          "default": true,
          "order": 1,
          "description": "Show a quick pick menu before closing (if disabled, all editors close immediately without any prompt)."
        },
        "closeAllNoConfirm.activeGroupOnly": {
          "type": "boolean",
          "default": false,
          "order": 2,
          "description": "When 'Ask Before Closing' is disabled: only close editors in the active group instead of all groups."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
